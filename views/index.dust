{>blockHeader/}

<div class="global_wrapper header_compensate">

  <section id="left_col" class="col span_2">
    <div class="block_title">
        <h1>What's <span id="word_hot">Hot</span></h1>
    </div>

    <!-- start hot stream -->

    <div class="left_col_block">
      <article id="trend_001">
        <div class="block_top block_inner">
          <div class="block_user_holder"><img src="images/bloggerpics/blogger_Vivian.jpg">
          </div>
          <div class="block_text_holder">
            <div class="block_username">Vivian liked</div>
            <div class="block_timelapse">2 days ago</div>
          </div>
        </div>
        <a rel="group" class="fancybox" href="images/dress2.jpg">
          <img src="images/dress2.jpg" width="100%">
        </a>
        <header class="block_inner">
          <h2 class="item_name" itemprop="item">Black dress</h2>
          <h2 class="shop_name" itemprop="shop">Love Bonito</h2>
          <h3 class="price" itemprop="price">$89.00</h3>
          <p>#black #lovebonito</p>
          <p>982 <span class="glyphicon glyphicon-heart"></span>, 203 <span class="glyphicon glyphicon-share-alt"></span>, 2 comments</p>
          <p><span class="glyphicon glyphicon-heart"></span> I want this! | <span class="glyphicon glyphicon-share-alt"></span> Share</p>
        </header>
      </article>
    </div>

    <!-- end hot stream -->
  </section><!-- left_col -->

  <section id="main" class="col span_1">
      <div class="block_title">
        <h1>Your <span id="word_stream">Stream</span></h1>
      </div>

    <!-- start your stream -->

    <div class="main_col_block">
      <article id="stream_001">
        <div class="block_top block_inner">
          <div class="block_user_holder"><img src="images/bloggerpics/blogger_Verlyn.jpg">
          </div>
