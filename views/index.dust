        <header class="block_inner">
          <h2 class="item_name" itemprop="item">White dress</h2>
          <h2 class="shop_name" itemprop="shop">Kiss Jane</h2>
          <h3 class="price" itemprop="price">$34.00</h3>
          <p>#white #dress #kissjane</p>
